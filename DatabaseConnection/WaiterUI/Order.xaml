                    <Button Content="Salad" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="Cheese" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>

                    <Button Content="Greek Salad" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>

                </StackPanel>
            </TabItem>
            <TabItem Header="Main" Margin="-2,-1,-1,1">
                <StackPanel >
                    <Button Content="beef" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="chicken" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="pork" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>

                    <Button Content="Button" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>

                </StackPanel>
            </TabItem>
            <TabItem Header="Drink" Margin="-2,-2,2,0">
                <StackPanel >
                    <Button Content="Button" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="Button" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="Button" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>

                    <Button Content="Button" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>

                </StackPanel>
            </TabItem>
            <TabItem Header="Dessert" Height="22" VerticalAlignment="Top" Margin="-2,-2,-11,0">
                <StackPanel >
                    <Button Content="Button" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="Button" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="Button" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>

                    <Button Content="Button" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75" Height="27"/>

                </StackPanel>
            </TabItem>
            <TabItem Header="Extera" Margin="11,-2,-14,2">

                <TextBox  HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="224" Height="23"/>

            </TabItem>

        </TabControl>
        <ListView HorizontalAlignment="Left" Height="208" Margin="10,12,0,0" VerticalAlignment="Top" Width="173">
            <Label Content="Label"/>

        </ListView>
        <Label Content="Sit Number:" HorizontalAlignment="Left" Height="24" Margin="16,249,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="91,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="73"/>



    </Grid>
</Window>
