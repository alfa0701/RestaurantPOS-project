<Window x:Class="WaiterUI.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaiterUI"
        mc:Ignorable="d"
        Title="Order" Height="400" Width="600">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="208" Margin="208,10,0,0" VerticalAlignment="Top" Width="276">

            <TabItem Header="Apeizer" Margin="-2,0,-1,0">
