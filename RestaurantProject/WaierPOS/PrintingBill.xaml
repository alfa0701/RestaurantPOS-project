<Window x:Class="WaierPOS.PrintingBill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaierPOS"
        mc:Ignorable="d"
        Title="PrintingBill" Height="400" Width="600">
    <Grid>
        <ListView Name="List1" HorizontalAlignment="Left" Height="126" Margin="6,40,0,0" VerticalAlignment="Top" Width="98">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Item " Width="25" DisplayMemberBinding="{Binding Path=MenuName}"/>
                    <GridViewColumn Header="qty" Width="30" DisplayMemberBinding="{Binding Path=qty}"/>
                    <GridViewColumn Header="qty" Width="30" DisplayMemberBinding="{Binding Path=price}"/>


                </GridView>
            </ListView.View>

        </ListView>
        <ListView Name="List2" HorizontalAlignment="Left" Height="126" Margin="185,41,0,0" VerticalAlignment="Top" Width="98">

        </ListView>
        <Label Content="OrderID :" HorizontalAlignment="Left" Height="33" Margin="3,-1,0,0" VerticalAlignment="Top" Width="73"/>
        <TextBox Name="txtId" HorizontalAlignment="Left" Height="21" Margin="62,1,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64"/>
        <Button Content="Add" HorizontalAlignment="Left" Height="20" Margin="115,43,0,0" VerticalAlignment="Top" Width="61" />
        <Button Content="Dellete" HorizontalAlignment="Left" Height="20" Margin="115,74,0,0" VerticalAlignment="Top" Width="61"/>
        <Button Content="Select All" HorizontalAlignment="Left" Height="20" Margin="115,111,0,0" VerticalAlignment="Top" Width="61"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="14" Margin="5,170,0,0" VerticalAlignment="Top" Width="40"/>
        <Label Content="Subtotal:" HorizontalAlignment="Left" Height="25" Margin="10,167,0,0" VerticalAlignment="Top" Width="57"/>
        <Label Content="Tax :" HorizontalAlignment="Left" Height="25" Margin="12,193,0,0" VerticalAlignment="Top" Width="46"/>
        <Label Content="Total :" HorizontalAlignment="Left" Height="25" Margin="12,216,0,0" VerticalAlignment="Top" Width="57"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="72,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="72,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="72,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72"/>
        <Button Content="Print" HorizontalAlignment="Left" Height="20" Margin="191,218,0,0" VerticalAlignment="Top" Width="61"/>
        <Button Name="btnEnter"  Content="" HorizontalAlignment="Left" Height="20" Margin="130,2,0,0" VerticalAlignment="Top" Width="30" Click="Button_Click_1" />

    </Grid>
</Window>
