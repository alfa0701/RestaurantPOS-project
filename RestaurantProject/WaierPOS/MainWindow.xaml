<Window x:Class="WaierPOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaierPOS"
        mc:Ignorable="d"
        Title="Log in" Height="350" Width="525"
         WindowStartupLocation="CenterScreen">
    <Grid Background="#FFECE1E1">

      
        <Label Content="ID :" HorizontalAlignment="Left" Height="28" Margin="88,24,0,0" VerticalAlignment="Top" Width="48" Grid.Column="1" FontSize="16"/>
        <Label Content="Pass :" HorizontalAlignment="Left" Height="28" Margin="85,78,0,0" VerticalAlignment="Top" Width="48" Grid.Column="1" FontSize="16"/>
        <TextBox Name="txtId"   HorizontalAlignment="Left" Height="28" Margin="149,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Grid.Column="1"/>
        <PasswordBox Name="txtPass"   HorizontalAlignment="Left" Height="28" Margin="148,78,0,0"  VerticalAlignment="Top" Width="178" Grid.Column="1"/>
        <Button Name="btnLogIn" Content="Log In" HorizontalAlignment="Left" Height="39" Margin="207,154,0,0" VerticalAlignment="Top" Width="79" Click="btnLogIn_Click" Grid.Column="1" Background="#FFF1D6ED" Foreground="Black" FontSize="20" />

     
    </Grid>
</Window>
