<Window x:Class="WaierPOS.UpdateQty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaierPOS"
        mc:Ignorable="d"
       Title="UpdateQty" Height="100" Width="300">
    <Grid Margin="0,0,0,-3">
        
        <Button Name="btPlus" Content="+" HorizontalAlignment="Left" Margin="109,23,0,0" VerticalAlignment="Top" Width="29" Click="btPlus_Click" Height="36" FontFamily="Segoe UI Black"/>
        <Button Name="btMinus" Content="-" HorizontalAlignment="Left" Margin="143,23,0,0" VerticalAlignment="Top" Width="25" Click="btMinus_Click" Height="36" RenderTransformOrigin="-0.234,0.618" FontFamily="Segoe UI Black"/>

        <Button Name="btSave" Content="Save" HorizontalAlignment="Left" Margin="181,0,0,13" VerticalAlignment="Bottom" Width="48" Click="btSave_Click" Height="36" FontFamily="Segoe UI Black"/>
        <Label Name="lblName" Content="" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Width="96"/>
        <TextBox Name="txtCount" HorizontalAlignment="Left" Height="23" Margin="61,33,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="33" TextChanged="txtCount_TextChanged" FontFamily="Segoe UI Black" />


    </Grid>
</Window>


