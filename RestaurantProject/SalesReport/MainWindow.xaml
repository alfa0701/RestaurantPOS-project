<Window x:Class="SalesReport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesReport"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DataGrid Name="grdReport" HorizontalAlignment="Left" Height="193" Margin="47,88,0,0" VerticalAlignment="Top" Width="253" ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding MenuName}" Width="100" Header="Item Name"/>
                <DataGridTextColumn Binding="{Binding Qty}" Width="100" Header="Qty"/>
           
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
